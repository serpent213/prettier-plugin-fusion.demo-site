---
import plausibleScript from "../scripts/plausible.ts?url"

interface Props {
  title?: string
  description?: string
}
const { title = "Fusion Formatter Demo", description = "" } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <link rel="icon" href="/favicon.svg" />
    <title>{title}</title>
    <script type="module" src={plausibleScript}></script>
  </head>
  <body>
    <slot />
  </body>
</html>
